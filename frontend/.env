# ===================================
# FINANCIAL BOT CONFIGURATION
# ===================================

# WhatsApp Bot Settings
ADMIN_NUMBERS=6281234567890,6281234567891
LOG_LEVEL=info
NODE_ENV=production

# Database Configuration
DB_PATH=../financial.db

# API Server Settings
API_PORT=3001
API_HOST=localhost

# CORS Settings (untuk frontend)
CORS_ORIGIN=http://localhost:3001,http://127.0.0.1:3001

# Optional: External Chart API
QUICKCHART_API_KEY=your_quickchart_api_key_here

# Optional: Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_PATH=./backups

# Security Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# ===================================
# DEVELOPMENT SETTINGS
# ===================================

# Uncomment untuk development
# NODE_ENV=development
# LOG_LEVEL=debug
# API_PORT=3001

# ===================================
# PRODUCTION SETTINGS
# ===================================

# Recommended untuk production
# NODE_ENV=production
# LOG_LEVEL=warn
# DB_PATH=/opt/financial-bot/data/financial.db